<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <com.github.onlynight.waveview.WaveView
        android:id="@+id/waveView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:isCircle="false"
        app:period="4"
        app:waveHeightPercent="0.95"
        app:waveRange="15dp"
        app:waveSpeed="10"
        app:waveStrokeWidth="3dp"
        app:wave1Color="#3a7993"
        app:wave2Color="#4294b1"/>

    <org.firezenk.bubbleemitter.BubbleEmitterView
        android:id="@+id/bubbleEmitter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp"
        android:src="@drawable/logo"
        android:contentDescription="@string/app_name" />

</FrameLayout>